<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|center_vertical"
    android:padding="16dp"
    android:background="@drawable/search_panel_bkg"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/close_container"
            android:contentDescription="ÃŽnchide"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/text_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_municipality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444" />

        <TextView
            android:id="@+id/text_icao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444" />

        <TextView
            android:id="@+id/text_iata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444" />

        <TextView
            android:id="@+id/text_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444" />
    </LinearLayout>

</FrameLayout>
