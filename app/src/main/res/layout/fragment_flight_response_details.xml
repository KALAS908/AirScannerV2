<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|end"
    android:layout_margin="16dp"
    android:background="@drawable/search_panel_bkg"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/close_container"
            android:contentDescription="ÃŽnchide"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:id="@+id/text_callsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Callsign: "
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/text_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airline: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_origin_coords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin Coordinates: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_dest_coords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Coordinates: "
            android:layout_marginTop="4dp" />
    </LinearLayout>

</FrameLayout>
